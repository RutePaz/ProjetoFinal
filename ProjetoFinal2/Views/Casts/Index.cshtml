@model IEnumerable<TI2PFINAL.Models.Cast>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add a new Actor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <a href="~/images/@item.Image" target="_blank">
                <img src="~/images/@item.Image" style=" height:160px; width:120px; object-fit:cover " />
            </a>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID_Actor }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_Actor }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID_Actor })
        </td>
    </tr>
}

</table>
